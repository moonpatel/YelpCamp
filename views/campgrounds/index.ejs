<% layout('layouts/boilerplate.ejs') %>
    <h1>YelpCamp Campgrounds</h1>
    <p>
        <a href="/campgrounds/new">Add new campground</a>
    </p>
    <ul>
        <% for(let camp of camps) { %>
            <div class="card">
                <div class="row">
                    <div class="col-md-4">
                        <img src="<%= camp.image %>/900x600" alt="campground" class="img-fluid">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5><%= camp.title %></h5>
                            <p class="card-text"><%= camp.description %></p>
                            <p class="card-text">
                                <small class="text-muted"><%= camp.location%></small>
                            </p>
                            <a class="btn btn-primary" href="/campgrounds/<%=camp._id%>">View <%=camp.title%></a>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </ul>